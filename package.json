{
  "name": "react-vui-fileviewer",
  "version": "0.0.1",
  "description": "React component for viewing files",
  "main": "src/fileViewer.js",
  "scripts": {
    "prebuild-sample": "rimraf dist && mkdir dist",
    "build-sample": "browserify -s app ./sample/app.js > ./dist/app.js && node-sass ./sample/app.scss dist/app.css",
    "lint": "eslint src",
    "postinstall": "bower install",
    "test:unit": "jest",
    "test": "npm run lint && npm run test:unit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/react-valence-ui-fileviewer.git"
  },
  "keywords": [
    "d2l",
    "valence-ui",
    "vui",
    "fileviewer"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "peerDependencies": {
    "react": "^0.13.3"
  },
  "devDependencies": {
    "babel-jest": "^5.3.0",
    "bower": "^1.5.3",
    "browserify": "^11.1.0",
    "eslint": "^1.5.1",
    "eslint-plugin-react": "^3.4.2",
    "jest-cli": "^0.5.7",
    "node-sass": "^3.3.3",
    "reactify": "^1.1.1",
    "rimraf": "^2.4.3"
  },
  "private": true,
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react"
    ]
  }
}
