{
  "name": "react-vui-fileviewer",
  "version": "2.0.0",
  "description": "React component for viewing files",
  "main": "src/fileViewer.js",
  "scripts": {
    "prebuild-sample": "rimraf ./sample/dist && mkdirp ./sample/dist",
    "build-sample": "npm run build-sample:js && npm run build-sample:css",
    "build-sample:js": "browserify -s app ./sample/app.js -p esmify > ./sample/dist/app.js",
    "build-sample:css": "sass -I node_modules -I ./ ./sample/app.scss  ./sample/dist/app.css",
    "lint": "eslint src",
    "postinstall": "bower install",
    "serve": "http-server -p 8080 ./sample/",
    "pretest:unit": "rimraf node_modules/karma-coverage/node_modules/istanbul",
    "test:unit": "karma start karma.conf.js --single-run",
    "test": "npm run lint && npm run test:unit",
    "watch:css": "onchange \"**/*.scss\" -- npm run build-sample:css -s",
    "watch:js": "onchange \"src/**/*.js\" \"src/**/*.jsx\" -- npm run build-sample:js -s",
    "watch": "parallelshell \"npm run serve\" \"npm run watch:css\" \"npm run watch:js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/react-valence-ui-fileviewer.git"
  },
  "keywords": [
    "d2l",
    "valence-ui",
    "vui",
    "fileviewer"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0",
    "react-dom": "^0.14.0 || ^15.0.0"
  },
  "dependencies": {
    "bower": "^1.6.5",
    "d2l-intl": "^0.2.1",
    "react-frau-intl": "^0.2.0",
    "react-valence-ui-iframe": "git+https://github.com/Brightspace/react-valence-ui-iframe.git#semver:^3",
    "url-parse": "^1.0.5"
  },
  "devDependencies": {
    "babel-core": "^6.9.0",
    "babel-plugin-rewire": "^1.0.0-rc-3",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^14.0.0",
    "browserify-istanbul": "^3.0.0",
    "browserify-shim": "^3.8.11",
    "coveralls": "^3.1.1",
    "es6-promise": "^3.2.1",
    "eslint": "^8.55.0",
    "eslint-config-brightspace": "^0.25.3",
    "eslint-plugin-react": "^3.5.0",
    "esmify": "^2.1.1",
    "http-server": "^0.8.5",
    "istanbul": "gotwarlost/istanbul#source-map",
    "jasmine-core": "^2.4.1",
    "karma": "^6.4.0",
    "karma-browserify": "^8.1.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "^2.0.0",
    "karma-jasmine": "^4.0.1",
    "mkdirp": "^0.5.1",
    "onchange": "^2.0.0",
    "parallelshell": "^2.0.0",
    "puppeteer": "^21.3.8",
    "react-addons-test-utils": "^15.3.2",
    "rimraf": "^2.4.3",
    "sass": "^1.69.0",
    "sinon": "^1.17.2",
    "sinon-as-promised": "^4.0.0"
  },
  "private": true,
  "browserify": {
    "transform": [
      "babelify",
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "pdfjs": "global:PDFJS"
  }
}
